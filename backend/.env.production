# Django 密钥 - 使用生成的安全密钥
SECRET_KEY=z%21%2B%2A3i7iho__m%28o%26sruay%21%230%21ywab5fcpj%28s%24t%26%21%218_%40%2Bsw%21%215h

# 调试模式（生产环境必须为 False）
DEBUG=False

# 允许的主机（生产环境必填，请替换为实际域名）
ALLOWED_HOSTS=yourdomain.com,www.yourdomain.com

# 数据库配置（生产环境建议使用 PostgreSQL）
DATABASE_URL=postgresql://username:password@localhost:5432/workorder_db

# CORS 配置（生产环境必填，请替换为实际域名）
CORS_ALLOWED_ORIGINS=https://yourdomain.com,https://www.yourdomain.com

# CSRF 信任的源（生产环境必填）
CSRF_TRUSTED_ORIGINS=https://yourdomain.com,https://www.yourdomain.com

# Redis 配置（用于缓存和会话）
REDIS_URL=redis://localhost:6379/0

# 邮件配置（可选）
EMAIL_BACKEND=django.core.mail.backends.smtp.EmailBackend
EMAIL_HOST=smtp.yourdomain.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=your_email@yourdomain.com
EMAIL_HOST_PASSWORD=your_email_password

# 文件存储配置（生产环境）
MEDIA_URL=/media/
MEDIA_ROOT=/var/www/workorder/media/

# 安全设置（生产环境建议启用）
SECURE_SSL_REDIRECT=True
SECURE_HSTS_SECONDS=31536000
SECURE_HSTS_INCLUDE_SUBDOMAINS=True
SECURE_HSTS_PRELOAD=True

# 日志配置
LOG_LEVEL=INFO
LOG_FILE=/var/log/workorder/django.log